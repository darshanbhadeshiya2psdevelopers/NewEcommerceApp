<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ProfileFragment">

    <include layout="@layout/empty_layout"/>

    <ProgressBar
        android:id="@+id/progressBar_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ScrollView
        android:id="@id/main_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/side_nav_bar">

                <FrameLayout
                    android:id="@+id/f_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:contentDescription="@string/profile_image"
                        android:src="@drawable/default_profile"
                        app:civ_border_color="@color/colorPrimaryDark"
                        app:civ_border_width="1.5dp" />

                    <ImageView
                        android:id="@+id/profile_type"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/circular_empty_layout"
                        android:backgroundTint="@color/white"
                        android:padding="2dp"
                        android:visibility="gone"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/f_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingHorizontal="20dp"
                    android:text="Darshan Bhadeshiya"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingHorizontal="20dp"
                    android:text="darshanbhadeshiya@gmail.com"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/user_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_email"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:paddingHorizontal="20dp"
                    android:text="+917016974471"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/edit_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_mobile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="15dp"
                    android:text="@string/edit_profile"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="7dp" />

            </RelativeLayout>

            <!--Orders-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="top"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/my_orders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="@string/my_orders"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/all_order_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/view_all"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone"/>

                    <View
                        android:id="@+id/hr_line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/my_orders"
                        android:layout_marginTop="12dp"
                        android:background="@color/grey" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_my_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hr_line1"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_home_myorder"
                        android:visibility="gone"/>

                    <!--empty_layout-->

                    <LinearLayout
                        android:id="@+id/empty_orders"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_below="@+id/hr_line1"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:background="@drawable/circular_empty_layout"
                            android:padding="7dp"
                            android:src="@drawable/ic_baseline_shopping_bag_24"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/no_orders"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Wishlist-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="top"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/wishlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="@string/wish_list"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/all_wishlist_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/view_all"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone"/>

                    <View
                        android:id="@+id/hr_line3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/wishlist"
                        android:layout_marginTop="12dp"
                        android:background="@color/grey"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_my_wishlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hr_line3"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_favourite"
                        android:visibility="gone"/>

                    <!--empty_layout-->

                    <LinearLayout
                        android:id="@+id/empty_wishlist"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_below="@+id/hr_line3"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:background="@drawable/circular_empty_layout"
                            android:padding="7dp"
                            android:src="@drawable/ic_baseline_favorite_24"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/no_items"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Review & rate-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="top"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="@string/my_reviews"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/all_review_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/view_all"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone"/>

                    <View
                        android:id="@+id/hr_line5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/reviews"
                        android:layout_marginTop="12dp"
                        android:background="@color/grey"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_my_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hr_line5"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_my_review"
                        android:visibility="gone"/>

                    <!--empty_layout-->

                    <LinearLayout
                        android:id="@+id/empty_reviews"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_below="@+id/hr_line5"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:background="@drawable/circular_empty_layout"
                            android:padding="7dp"
                            android:src="@drawable/review"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/no_reviews"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Addresses-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="top"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/addresses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="@string/my_address"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/all_address_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/view_all"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone"/>

                    <View
                        android:id="@+id/hr_line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/addresses"
                        android:layout_marginTop="12dp"
                        android:background="@color/grey" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hr_line2"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="5dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="7dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="7dp"
                                android:paddingHorizontal="5dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/address_user_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginRight="5dp"
                                    android:layout_toLeftOf="@+id/address_type"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="Darshan Bhadeshiya"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/address_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="@color/grey"
                                    android:gravity="center"
                                    android:paddingHorizontal="6dp"
                                    android:paddingVertical="3dp"
                                    android:text="Home Address"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/address_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="7dp"
                                android:paddingHorizontal="5dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/mob_num"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="7dp"
                                android:paddingHorizontal="5dp"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:text="26, Akruti Apartment, Station plot, Dhoraji - 360410, Rajkot, Gujarat, India"
                                android:textSize="15sp"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/add_address_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hr_line2"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="4"
                        android:text="Add Address"
                        android:visibility="gone"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Saved Bank Account-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="top"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/banks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:text="@string/default_bank_acc"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/all_bank_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/view_all"
                        android:textColor="@color/colorPrimary"
                        android:visibility="gone"/>

                    <View
                        android:id="@+id/hr_line4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/banks"
                        android:layout_marginTop="12dp"
                        android:background="@color/grey"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/item_bank_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hr_line4"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="5dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bank_name"
                                    android:textSize="16sp"
                                    android:textColor="@color/dark_grey"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/bank_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:text="@string/bank_name"
                                    android:textSize="15sp"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ifsc"
                                    android:textSize="16sp"
                                    android:textColor="@color/dark_grey"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/ifsc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:text="@string/ifsc"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bank_account_no"
                                    android:textSize="16sp"
                                    android:textColor="@color/dark_grey"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/bank_account_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:text="@string/bank_account_no"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bank_account_type2"
                                    android:textSize="16sp"
                                    android:textColor="@color/dark_grey"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/bank_account_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:text="@string/bank_account_type"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bank_holder_name"
                                    android:textSize="16sp"
                                    android:textColor="@color/dark_grey"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/bank_holder_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:text="@string/bank_holder_name"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bank_holder_mobile"
                                    android:textSize="16sp"
                                    android:textColor="@color/dark_grey"
                                    android:textStyle="bold"/>

                                <TextView
