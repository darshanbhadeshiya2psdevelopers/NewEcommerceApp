<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_primary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/side_nav_bar"
                android:backgroundTint="@color/colorPrimary">

                <ImageView
                    android:id="@+id/close_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_baseline_close_24"
                    app:tint="@color/white" />

                <LinearLayout
                    android:id="@+id/welcome_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/close_btn"
                    android:layout_marginBottom="60dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_txt1"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_txt2"
                        android:textSize="18sp"
                        android:textColor="@color/secondary_txt"/>

                </LinearLayout>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="33dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>

                    <View
                        android:layout_width="180dp"
                        android:layout_height="1.2dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:hint="@string/enter_name"
                        android:inputType="text"
                        android:paddingHorizontal="10dp"
                        android:drawableLeft="@drawable/ic_baseline_text_snippet_24"
                        app:drawableTint="@color/colorPrimary"
                        android:drawablePadding="10dp" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="@string/enter_email"
                        android:inputType="textEmailAddress"
                        android:paddingHorizontal="10dp"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        app:drawableTint="@color/colorPrimary"
                        android:drawablePadding="10dp" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="@string/enter_pass"
                        android:inputType="textPassword"
                        android:paddingHorizontal="10dp"
                        android:drawableLeft="@drawable/ic_baseline_password_24"
                        app:drawableTint="@color/colorPrimary"
                        android:drawablePadding="10dp"/>

                    <EditText
                        android:id="@+id/et_cpassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="@string/enter_cpass"
                        android:inputType="textPassword"
                        android:paddingHorizontal="10dp"
                        android:drawableLeft="@drawable/ic_baseline_password_24"
                        app:drawableTint="@color/colorPrimary"
                        android:drawablePadding="10dp"/>

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="@string/enter_mobile"
                        android:inputType="phone|number"
                        android:paddingHorizontal="10dp"
                        android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
                        app:drawableTint="@color/colorPrimary"
                        android:drawablePadding="10dp" />

                    <Button
                        android:id="@+id/register_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginHorizontal="30dp"
                        android:text="@string/signup_txt"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:paddingHorizontal="25dp"
                        app:cornerRadius="7dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_txt3"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/login_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/login"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                </LinearLayout>

                <View
                    android:layout_width="120dp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>